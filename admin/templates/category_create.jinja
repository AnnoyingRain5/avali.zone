{% extends "base.jinja" %}

{% block title %}Admin: Create Category{% endblock title %}

{% block header %}
    <h1>Admin: Create Category</h1>
{% endblock header %}

{% block content %}
    <div class="content">
        <div class="dock">
            <div class="pod">
                <form action="create/submit" method="post">
                    <label for="name">Name</label><br>
                    <input type="text" id="name" name="name"><br>
                    <label for="type">Type (eg: "group" or "content" CaSe SeNsItIvE)</label><br>
                    <input type="text" id="type" name="type"><br>
                    <label for="displayorder">The displayorder (like a priority) of this category</label><br>
                    <input type="text" id="displayorder" name="displayorder"><br><br>
                    <input type="submit" value="Submit"><br>
                </form>
            </div>
        </div>
    </div>
{% endblock content %}
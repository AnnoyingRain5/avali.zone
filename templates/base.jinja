<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/static/css/base.css">
    {% if fontchoice == "english" %}
    <link rel="stylesheet" href="/static/css/english.css">
    {% endif %}
    <link rel=" icon" href="/static/icons/avali.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Avali Zone - {% block title %}{% endblock title %}</title>
    <meta name="description" content="{% block description %}{% endblock description %}">
    {% block head %}{% endblock head %}
</head>

<body>
    <div class="content">
        {% if environment == "development" %}
        <pre style="text-align:center;">(DEV)</pre>{% endif %}{% block header %}{% endblock header %}
    </div>
    {% block nav_override %}
    <div class="navbar">
        <div class="pod">
            <a href="/">Home</a>
        </div>
        <div class="pod">
            <a href="/about">About</a>
        </div>
        <div class="pod">
            <a href="/contact">Contact</a>
        </div>
        <div class="pod">
            <a href="/lore">Lore</a>
        </div>
        <div class="pod">
            <a href="/groups">Community Groups</a>
        </div>
        <div class="pod">
            <a href="/content">Content</a>
        </div>
        <div class="pod">
            <a href="/scratch">Avali Scratch</a>
        </div>
        <div class="pod">
            <a href="/panel">Panel</a>
        </div>
        <div class="pod">
            {% if fontchoice == "english" %}
            <a style="font-family: 'Avali Scratch'; font-size: 150%; " href="/util/togglelang">Prefer Scratch?</a>
            {% else %}
            <a style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 16px; "
                href="/util/togglelang">Prefer English?</a>
            {% endif %}
        </div>
    </div>
    {% endblock nav_override %}

    {% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
    {% for category, message in messages %}
    <div class="content flash flash_{{category}}">{{message}}</div>
    {% endfor %}
    {% endif %}
    {% endwith %}

    {% if fontchoice == none %}
    <div id="WelcomeModal" class="modal" style="display: block;">

        <!-- Modal content -->
        <div class="modal-content">
            <p class="englishmodal">Welcome to avali.zone! Before proceeding, I need to know if you can read avali
                scratch or not.</p>
            <p class="englishmodal"><strong>If you don't know, pick "no".</strong></p>
            <div class="modalinputs">
                <button onclick="document.cookie = 'fontchoice=english; Max-Age=31536000; path=/'; location.reload()">No, I want english!</button>
                <button class=englishmodal
                    onclick="document.cookie = 'fontchoice=scratch; Max-Age=31536000; path=/'; document.getElementById('WelcomeModal').style.display='none';">Yes,
                    I am fluent!</button>
            </div>
        </div>
    </div>
    {% endif %}

    {% block content %}{% endblock content %}
</body>

</html>